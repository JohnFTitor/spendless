<section id="transactions" class="bg-slate-300 w-full min-h-screen relative flex flex-col justify-between">
  <%= render 'shared/header', :title => 'Transactions' %>
  <div class="w-full max-w-5xl mx-auto flex justify-between items-center p-3 md:p-5 bg-white">
    <h2 class="text-xl xl:text-2xl 2xl:text-3xl font-semibold"> Total amount: $<%= @group.total_amount %> </h2>
  </div>
  <ul class="transactions p-3 flex flex-col w-full gap-3 box-border">
    <% @transactions.each do |transaction| %>
      <li class="transaction w-full max-w-4xl mx-auto flex justify-between items-center p-3 md:p-5 bg-white flex-wrap gap-5">
        <h2 class="text-tertiary-500 text-lg xl:text-xl 2xl:text-2xl"> <%= transaction.name %> </h2>
        <p class="font-semibold text-lg xl:text-xl 2xl:text-2xl"> $<%= transaction.amount %> </p>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add a new transaction', new_category_transaction_path(category_id: @group.id), class: "block sticky bottom-0 text-xl uppercase text-light text-center text-white bg-secondary-800 w-full max-w-3xl p-5 mt-20 mx-auto sm:hover:scale-x-95" %>
</section>

