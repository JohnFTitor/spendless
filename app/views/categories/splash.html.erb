<div class="relative flex flex-col min-h-screen items-center justify-end box-border w-full p-5">
  <h1 class="absolute top-1/3 mb-5 text-3xl text-tertiary-800 font-semibold italic"> Spendless </h1>
  <div class="flex flex-col items-center w-full max-w-2xl p-5">
    <% if user_signed_in?  %>
      <%= link_to 'Categories', categories_path, class: "px-2 py-3 text-xl uppercase font-light text-white bg-primary-500 mb-2 w-full text-center" %>
    <% else %>
      <%= link_to 'Log in', new_user_session_path, class: "px-2 py-3 text-xl uppercase font-light text-white bg-primary-500 mb-2 w-full text-center" %>
      <%= link_to 'Sign up', new_user_registration_path, class: "px-2 py-3 text-xl uppercase font-light text-tertiary-300 mb-2 w-full text-center" %>
    <% end %>
  </div>
</div>
