<section id="categories" class="bg-slate-300 w-full min-h-screen relative flex flex-col justify-between">
  <%= render 'shared/header', :title => 'Categories' %>
  <ul class="groups p-3 flex flex-wrap justify-center w-full gap-3 xl:gap-7 box-border">
    <% @categories.each do |category| %>
      <li class="w-full max-w-xl lg:hover:scale-105">
        <%= link_to category_transactions_path(category_id: category.id), id: "Group-#{category.id}", class: 'group flex justify-between items-center p-3 bg-white flex-wrap gap-5' do %>
          <div class="card flex gap-5 items-center">
            <div class="relative w-24 xl:w-40 2xl:w-48 h-24 xl:h-40 2xl:h-48">
              <img src=<%= category.icon %> alt=<%= category.name %> class="absolute top-0 w-full h-full object-cover" >
            </div>
            <h2 class="text-tertiary-500 text-lg lg:text-xl xl:text-2xl 2xl:text-3xl"> <%= category.name %> </h2>
          </div>
          <p class="font-semibold text-lg lg:text-xl xl:text-2xl 2xl:text-3xl"> $<%= category.total_amount %> </p>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add New Category', new_category_path, class: "block sticky bottom-0 text-xl uppercase text-light text-center text-white bg-secondary-800 w-full max-w-3xl p-5 mt-20 mx-auto sm:hover:scale-x-95"  %>
</section>

