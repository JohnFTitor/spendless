<header class="flex p-5 sticky top-0 text-white bg-primary-500 justify-center z-20 box-border">
  <%= link_to 'Home', '/', class: 'absolute left-0 top-1/3 px-2', id: 'Home' %>
  <h2 class="text-xl uppercase text-light"><%= title %></h2>
  <% if user_signed_in? %>
    <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'absolute right-0 bottom-0 h-full flex items-center px-2 box-border' %>
  <% end %>
</header>
